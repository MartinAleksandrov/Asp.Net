@{
    ViewBag.Title = "Nums 1 ... ";
    int count = (int)ViewBag.Count; 
}

<h2>@ViewBag.Message</h2>

@if (count > 0)
{
    <h1>Nums 1 ... @count</h1>
    <ul class="list-group">

        @for (int i = 1; i <= count; i++)
        {
            <li class="list-group-item">@i</li>
        }
    </ul>
}
else
{
    <h2>Nums 1 ... N</h2>
}
<form asp-controller="Home" asp-action="NumbersToN" method="post">
    <div class="row">
        <div class="col-2">
            <input class="form-control" type="number" min="0" step="1" name="count"/>
        </div>
        <div class="col-2">
            <button class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>